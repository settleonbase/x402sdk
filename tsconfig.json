{
  "compilerOptions": {
    "target": "ES2022",
	"moduleResolution": "node16",
	"module": "node16",
    "outDir": "./build",
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
	"resolveJsonModule": true,        // ✅ 启用 JSON 模块导入
    "allowSyntheticDefaultImports": true,  // ✅ 允许默认导入
  },
  "include": ["src/**/*.ts", "src/localServer/num.js", "src/localServer/workers/sw.ts.old"]
}